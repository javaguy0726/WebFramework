	<build>
		<sourceDirectory>${basedir}/src/main/java</sourceDirectory>
		<outputDirectory>${basedir}/target/classes</outputDirectory>
		<testSourceDirectory>${basedir}/src/test/java</testSourceDirectory>
		<testOutputDirectory>${basedir}/target/test-classes</testOutputDirectory>
		<testResources>
			<testResource>
				<directory>${basedir}/src/test/resources</directory>
				<filtering>false</filtering>
				<includes>
					<include>**/*.exe</include>
					<include>**/*.properties</include>
					<include>**/*.csv</include>
					<include>**/*.jpg</include>
					<include>**/*.xlsx</include>
				</includes>
				<excludes>
					<exclude>**/*.ppt</exclude>
					<exclude>**/*.pdf</exclude>
				</excludes>
			</testResource>
		</testResources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.3</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
					<encoding>${project.build.sourceEncoding}</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.6</version>
				<configuration>
					<encoding>${project.build.sourceEncoding}</encoding>
				</configuration>
			</plugin>
			<plugin>
    			<artifactId>maven-antrun-plugin</artifactId>
   				<version>1.7</version>
    			<executions>
    				<execution>
      					<phase>test</phase>
      					<goals>
      						<goal>run</goal>
      					</goals>
      					<configuration>
      						<target>
    							<mkdir dir="${project.build.directory}/test-screenshots"/> 							
    							<mkdir dir="${project.build.directory}/test-log"/> 							
       							<zip destfile="${project.build.directory}/automation-report.zip">
       								<zipfileset dir="${project.build.directory}/test-report" includes="**/*.*" prefix="report"/>
       								<zipfileset dir="${project.build.directory}/test-log" includes="**/*.*" prefix="report/testlog"/>
       								<zipfileset dir="${project.build.directory}/test-screenshots" includes="**/*.*" prefix="report/screenshots"/>
        						</zip>
     						</target>
    					</configuration>
    				</execution>
  				</executions>
   			</plugin>
		</plugins>
	</build>	

	<repositories>
		<repository>
			<id>internal</id>
			<name>Internal Nexus</name>
			<url>http://192.168.16.50:8081/nexus/content/repositories/public</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>internal</id>
			<name>Internal Nexus</name>
			<url>http://192.168.16.50:8081/nexus/content/repositories/public</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</pluginRepository>
	</pluginRepositories>
	
	<profiles>
		<profile>
			<id>oa</id>
			<activation>
				<activeByDefault>false</activeByDefault>
				<jdk>[1.7, 1.8]</jdk>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<version>${surefire.plugin.revision}</version>
						<configuration>
						    <skipTests>${skipTests}</skipTests>
						    <systemPropertyVariables>
						    </systemPropertyVariables>
							<argLine>-Dfile.encoding=${file.encoding}</argLine>
							<argLine>-Xms1024m -Xmx2048m -XX:PermSize=256m -XX:MaxPermSize=512m</argLine>
							<forkCount>0</forkCount>
							<reuseForks>false</reuseForks>
							<testFailureIgnore>true</testFailureIgnore>
							<includes>
            					<include>**/*Test.java</include>
          					</includes>
							<suiteXmlFiles>
								<suiteXmlFile>testng_xmls/oa.xml</suiteXmlFile>
							</suiteXmlFiles>
							<reportsDirectory>${project.build.directory}/test-report</reportsDirectory>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>mi</id>
			<activation>
				<activeByDefault>false</activeByDefault>
				<jdk>[1.7, 1.8]</jdk>
			</activation>
