						    </systemPropertyVariables>
							<argLine>-Dfile.encoding=${file.encoding}</argLine>
							<argLine>-Xms1024m -Xmx2048m -XX:PermSize=256m -XX:MaxPermSize=512m</argLine>
							<forkCount>0</forkCount>
							<reuseForks>false</reuseForks>
							<testFailureIgnore>true</testFailureIgnore>
							<includes>
            					<include>**/*Test.java</include>
          					</includes>
							<suiteXmlFiles>
								<suiteXmlFile>testng_xmls/xiaomi.xml</suiteXmlFile>
							</suiteXmlFiles>
							<reportsDirectory>${project.build.directory}/test-report</reportsDirectory>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>jd</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<version>${surefire.plugin.revision}</version>
						<configuration>
						    <skipTests>${skipTests}</skipTests>
						    <systemPropertyVariables>
						    	<testEnv>${debugEnv}</testEnv>
						    </systemPropertyVariables>
							<argLine>-Dfile.encoding=${file.encoding}</argLine>
							<argLine>-Xms1024m -Xmx2048m -XX:PermSize=256m -XX:MaxPermSize=512m</argLine>
							<forkCount>0</forkCount>
							<reuseForks>false</reuseForks>
							<testFailureIgnore>true</testFailureIgnore>
							<includes>
            					<include>**/*Test.java</include>
          					</includes>
							<suiteXmlFiles>
								<suiteXmlFile>testng_xmls/jd.xml</suiteXmlFile>
							</suiteXmlFiles>
							<reportsDirectory>${project.build.directory}/test-report</reportsDirectory>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
